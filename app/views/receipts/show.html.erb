<h3>RECEIPT</h3>

<table>
  <tr>
    <th scope="col">Item</th>
    <th scope="col">Quantity</th>
    <th scope="col">Price</th>
  </tr>
  <% @receipt.each do |k,v| %>
  <tr>
    <td><%= k %></td>
    <td><%= v[:qty] %></td>
    <td><%= "$#{sprintf("%.2f", v[:transaction_total])}" %></td>
  </tr>
  <% end %>
</table>
<br>
<p>Total Price : <%="$#{sprintf("%.2f", @receipt.values.sum {|item| item[:item_savings]})}"%></p>
<p>You Saved <%="$#{sprintf("%.2f", @receipt.values.sum {|item| item[:item_savings]})} today"%></p>
