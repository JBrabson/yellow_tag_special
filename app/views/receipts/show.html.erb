<table>
  <tr>
    <th scope="col">Item</th>
    <th scope="col">Quantity</th>
    <th scope="col">Price</th>
  </tr>
  <% @receipt.each do |k,v| %>
  <tr>
    <td><%= k %></td>
    <td><%= v[:qty] %></td>
    <td><%= v[:transaction_total] %></td>
  </tr>
  <% end %>
</table>
<br>
<br>
<p>Total Price : <%="$#{@receipt.values.sum {|item| item[:transaction_total]}}"%></p>
<p>You Saved <%="$#{@receipt.values.sum {|item| item[:item_savings]}} today"%></p>
